    <!--配置一个resultMap 指定返回的类型 -->
    <resultMap id="priorityModelRM" type="PriorityModel">
        <id column="id" property="id"/>
        <id column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="staus" property="status"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <select id="findAll" parameterType="PriorityModel" resultMap="priorityModelRM">
        select
        c.*
        from
        category a
        <where>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(name)">
                AND c.`name` like CONCAT('%',"\\" #{name},'%' )
            </if>
        </where>
    </select>

